<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button">
        <item name="android:backgroundTint">@color/main</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="choose_button" parent="main_button">
        <item name="android:backgroundTint">@color/choose</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="main_text">
        <item name="android:background">@color/main</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>